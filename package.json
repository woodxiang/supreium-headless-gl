{
  "name": "supreium-headless-gl",
  "version": "8.2.4",
  "description": "Creates a WebGL context without a window",
  "main": "index.js",
  "browser": "src/javascript/browser-index.js",
  "types": "index.d.ts",
  "directories": {
    "test": "test"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "test": "standard | snazzy && tape test/*.js | faucet",
    "rebuild": "node-gyp rebuild --verbose",
    "prebuild": "prebuild -t 16.20.2 -t 18.20.4 -t 18.17.1 -t 20.17.0 -t 22.8.0 --strip",
    "install": "node-gyp-build"
  },
  "dependencies": {
    "bindings": "^1.5.0",
    "bit-twiddle": "^1.0.2",
    "glsl-tokenizer": "^2.1.5",
    "nan": "^2.22.0",
    "node-abi": "^3.71.0",
    "node-gyp": "^10.2.0",
    "node-gyp-build": "^4.8.2",
    "prebuildify": "^6.0.1"
  },
  "devDependencies": {
    "angle-normals": "^1.0.0",
    "bunny": "^1.0.1",
    "faucet": "^0.0.4",
    "gl-conformance": "^2.0.9",
    "prebuild": "^13.0.1",
    "prettier": "^3.4.2",
    "snazzy": "^9.0.0",
    "standard": "^17.1.2",
    "tape": "^5.9.0"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:woodxiang/headless-gl.git"
  },
  "keywords": [
    "webgl",
    "webgl2",
    "opengl",
    "supreium-headless-gl",
    "headless",
    "server",
    "gpgpu"
  ],
  "author": "Mikola Lysenko",
  "license": "BSD-2-Clause",
  "gypfile": true,
  "files": [
    "angle/include",
    "deps",
    "prebuilds",
    "src",
    "index.d.ts",
    "binding.gyp",
    "README.md"
  ]
}